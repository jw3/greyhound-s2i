#!/bin/bash -ex
#
# S2I assemble script for the 'greyhound-s2i' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

# If the 'greyhound-s2i' assemble script is executed with the '-h' flag, print the usage.
if [[ "$1" == "-h" ]]; then
	exec /usr/libexec/s2i/usage
fi

# Restore artifacts from the previous build (if they exist).
#
if [ "$(ls /tmp/artifacts/ 2>/dev/null)" ]; then
  echo "---> Restoring build artifacts..."
  mv /tmp/artifacts/. ./
fi

echo "---> Installing source..."
cp -Rf /tmp/src/. ./

echo "---> Building entwine index from source..."

for f in $(ls *.source); do
  name=$(echo "$f" | cut -d. -f1)
  mapfile -t inputs < ${f}
  if [[ -f "$name.json" ]]; then json="$name.json"; fi
  echo "---> Processing source for index $name"
  entwine build "$json" -i ${inputs[@]} -o "/entwine/$name"
done

echo "---> Updating index permissions"
chgrp -R 0 /entwine
chmod -R g+x /entwine
